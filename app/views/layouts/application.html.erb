<!DOCTYPE html>
<html>
<head>
  <title>Scabies</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div class="row">
    <div class="column grid_6">
      <h1>Scabies Bug Tracker</h1>
    </div>
    <div class="column grid_4" align="right">
      <%= render :partial => "shared/navbar" %>
    </div>
  </div>
  <div class="row">
    <div class="column grid_6">
      <p id="notice"><%= notice %></p>
    </div>
  </div>

  <div class="row">
    <%= yield %>
  </div>

</body>
</html>
